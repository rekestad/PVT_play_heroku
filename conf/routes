# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET		/hello				controllers.HomeController.helloThere

GET		/helloworld/:input				controllers.TestClass.helloworld(input: String, id)

GET		/user/add						controllers.UserController.addUsr(id:Long, fname:String, lname:String)

GET		/user/list-all					controllers.UserController.listUsrs

GET		/test-db						controllers.PlayDBTest.listUsrs

GET		/test-db/make					controllers.PlayDBTest.makeUsr(age:Integer, name:String, desc:String)

GET		/importSthlmData				controllers.SthlmDataController.importAll
GET		/updateSthlmData				controllers.SthlmDataController.updateAll

GET     /location/add                   controllers.LocationClass.addLocation(sthlm_id:String, name:String, name_short:String, loc_type:Integer, x:Double, y:Double)
GET     /location/list-all              controllers.LocationClass.getLocations
GET     /location-db                    controllers.LocationController.listLocations
#GET    /location-db/make               controllers.LocationController.makeLocation(name:String, loc_type:Integer, x:Double, y:Double)

POST 	/event/create					controllers.EventController.createEvent(locationId:Integer, date:String, time:String, desc:String)
#POST 	/event/update					controllers.EventController.updateEvent()
#GET	/event/delete					controllers.EventController.deleteEvent(id:int)
#GET	/event/select					controllers.EventController.selectEvent(id:int)
#GET	/event/selectAll				controllers.EventController.selectEvent(id:int)
#GET	/event/selectFavourites			controllers.EventController.selectEvent(id:int)
#GET	/event/selectFavourites			controllers.EventController.selectEvent(id:int)
