# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET		/hello				controllers.HomeController.helloThere

GET		/helloworld/:input				controllers.TestClass.helloworld(input: String, id)

GET		/user/add						controllers.UserController.addUsr(id:Long, fname:String, lname:String)

GET		/user/list-all					controllers.UserController.listUsrs

GET		/test-db						controllers.PlayDBTest.listUsrs

GET		/test-db/make					controllers.PlayDBTest.makeUsr(age:Integer, name:String, desc:String)

GET		/importSthlmData				controllers.SthlmDataController.importAll
GET		/updateSthlmData				controllers.SthlmDataController.updateAll

#GET     /location/add                   controllers.LocationClass.addLocation(sthlm_id:String, name:String, name_short:String, loc_type:Integer, x:Double, y:Double)
GET     /location/list-all              controllers.LocationController.listLocations
#GET    /location-db/make               controllers.LocationController.makeLocation(name:String, loc_type:Integer, x:Double, y:Double)

# Create-anrop: http://localhost:9000/event/create?locationId=2&date=2017-02-03&time=19.00&description=Ringar%20p%C3%A5%20vattnet
POST	/event/create					controllers.EventController.createEvent(locationId:String, date:String, time:String, description:String)

POST	/event/testpost					controllers.EventController.postTest()


# Update-anrop: http://localhost:9000/event/update?eventId=1&locationId=44&date=2017-06-03&time=15.00&description=Yo%20biatch!
GET 	/event/update					controllers.EventController.updateEvent(eventId:String, locationId:String, date:String, time:String, description:String)
#GET	/event/delete					controllers.EventController.deleteEvent(id:int)
#GET	/event/select					controllers.EventController.selectEvent(id:int)
#GET	/event/selectAll				controllers.EventController.selectEvent(id:int)
#GET	/event/selectFavourites			controllers.EventController.selectEvent(id:int)
#GET	/event/selectFavourites			controllers.EventController.selectEvent(id:int)
